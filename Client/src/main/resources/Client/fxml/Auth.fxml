<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.AuthController">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" depthTest="DISABLE" layoutY="100.0" prefHeight="60.0"
               prefWidth="500.0" text="Authorization" textAlignment="CENTER" textFill="#5b5555"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <font>
                <Font name="Kristen ITC" size="36.0"/>
            </font>
        </Label>
        <TextField fx:id="txtLogin" layoutX="150.0" layoutY="180.0" onAction="#enter" prefHeight="30.0"
                   prefWidth="200.0" promptText="Login"
                   style="-fx-border-color: lightgreen; -fx-border-radius: 5; -fx-background-insets: 0;"
                   AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <Pane prefHeight="100.0" prefWidth="500.0" style="-fx-background-color: #1144AA;" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"/>
        <Label id="NetChat" alignment="CENTER" prefHeight="100.0" prefWidth="375.0" text="CloudStorage"
               textAlignment="CENTER" textFill="WHITE" AnchorPane.bottomAnchor="300.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="0.0">
            <font>
                <Font name="Kristen ITC" size="48.0"/>
            </font>
        </Label>
        <TextField fx:id="txtPassword" layoutX="150.0" layoutY="240.0" onAction="#enter" prefHeight="30.0"
                   prefWidth="200.0" promptText="Password"
                   style="-fx-border-color: lightgreen; -fx-border-radius: 5; -fx-background-insets: 0;">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <Button fx:id="btnEnter" contentDisplay="CENTER" layoutX="175.0" layoutY="310.0" mnemonicParsing="false"
                onAction="#enter" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: FFA700;" text="Enter"
                textAlignment="JUSTIFY" textFill="WHITE">
            <font>
                <Font name="Lobster" size="24.0"/>
            </font>
            <effect>
                <Blend/>
            </effect>
        </Button>
    </children>
</AnchorPane>
